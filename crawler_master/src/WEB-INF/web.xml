<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

 <web-app>
   <display-name>Crawl Master Servlet</display-name>
    <servlet>
     <servlet-name>master</servlet-name>
     <servlet-class>com.myapp.master.MasterServlet</servlet-class> 
      <load-on-startup>0</load-on-startup>
       <init-param>
           <param-name>host_path</param-name>
           <param-value>/seeds</param-value>
        </init-param>
   </servlet>
    
   <servlet-mapping>
     <servlet-name>master</servlet-name>
     <url-pattern>/status</url-pattern>
   </servlet-mapping>  
   
    <servlet-mapping>
     <servlet-name>master</servlet-name>
     <url-pattern>/workerstatus</url-pattern>
   </servlet-mapping>  
   
    <servlet-mapping>
     <servlet-name>master</servlet-name>
     <url-pattern>/test_post</url-pattern>
   </servlet-mapping>  

   <!-- add any additional servlets and servlet mappings here -->
</web-app>
